<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ware_blr">

    <View
        android:id="@+id/vBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:background="@drawable/bg_ware_blr"/>

    <ImageView
        android:id="@+id/ivWareImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvWareName"
        android:padding="16dp"
        android:contentDescription="@string/Ware_image_descr"
        android:background="@color/whiteFF"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvWareName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/bg_ware_corner_radius"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/whiteFF"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Ware name"/>

</androidx.constraintlayout.widget.ConstraintLayout>